<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_list_item_dynamic_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_21"
        android:layout_marginEnd="@dimen/margin_21">

        <TextView
            android:id="@+id/txt_list_item_dyanamic_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="@dimen/text_margin_18"
            android:layout_marginBottom="@dimen/margin_18"
            android:layout_toRightOf="@id/iv_menu_list_item_dyanamic_imageleft"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="22.2sp"
            android:text=""
            android:layout_centerVertical="true"
            android:textColor="#202020"
            android:textSize="@dimen/margin_16"
            android:textStyle="normal"

            />

        <ImageView
            android:id="@+id/iv_menu_list_item_dyanamic_imageleft"
            android:layout_width="@dimen/margin_12"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/margin_12"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/iv_menu_list_item_dyanamic_imageright"
            android:layout_width="@dimen/margin_12"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_20"
            android:layout_height="@dimen/margin_12"
            android:layout_alignParentRight="true" />

    </RelativeLayout>
</LinearLayout>