<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_list_item_static_list"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"


        android:layout_marginEnd="@dimen/margin_10">

        <TextView
            android:id="@+id/txt_menu_list_item_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginTop="@dimen/margin_14"
            android:layout_toRightOf="@id/iv_menu_list_item_left_image"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/text_margin_14"
            android:textStyle="normal"

            />


        <ImageView
            android:id="@+id/iv_list_item_static_imageright"
            android:layout_width="@dimen/margin_12"
            android:layout_height="@dimen/margin_12"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_14"
            android:layout_marginBottom="@dimen/margin_18" />

        <ImageView

            android:id="@+id/iv_menu_list_item_left_image"
            android:layout_width="@dimen/margin_12"
            android:layout_height="@dimen/margin_12"
            android:layout_marginTop="@dimen/margin_14"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>
</LinearLayout>