<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_listitem_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_5"
    android:layout_marginTop="10dp"
    android:layout_marginRight="@dimen/margin_5">

    <TextView
        android:id="@+id/txt_list_item_category_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_16"
        android:layout_marginTop="@dimen/margin_17"
        android:text="@string/app_name"

        android:layout_marginBottom="@dimen/margin_15"
        android:textSize="@dimen/text_margin_16" />


    <ImageView
        android:id="@+id/iv_list_item_category_arrow"
        android:layout_width="@dimen/margin_12"
        android:layout_height="@dimen/margin_12"
        android:layout_centerVertical="true"

        android:layout_marginTop="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_16"

        android:layout_alignParentEnd="true"
        />

    <ImageView
        android:id="@+id/iv_list_item_category_arrow_left"
        android:layout_width="@dimen/margin_12"
        android:layout_height="@dimen/margin_12"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
      android:layout_marginStart="@dimen/margin_16"
        android:layout_marginBottom="@dimen/margin_15"

        />


</RelativeLayout>

