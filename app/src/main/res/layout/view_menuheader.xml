<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ll_activity_menu_header"
    android:layout_height="wrap_content"
   android:paddingLeft="@dimen/text_margin_22"
   android:layout_marginTop="@dimen/text_margin_22"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_view_menuheader_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_17"
        android:fontFamily="sans-serif-medium"

        android:textSize="@dimen/text_margin_22"
        android:textStyle="normal"

        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <ImageView
            android:id="@+id/iv_view_menuheader_left_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_18"
            android:layout_marginTop="@dimen/margin_19" />


        <TextView
            android:id="@+id/txt_view_menuheader_descriptive_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_view_menuheader_left_image"
            android:paddingTop="@dimen/margin_19"

            android:textSize="@dimen/text_margin_15"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/iv_view_menuheader_right_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/margin_15"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/margin_15"
            android:layout_marginTop="@dimen/margin_19" />
    </RelativeLayout>
</LinearLayout>
